{
  "name": "symbol-relation-window",
  "displayName": "Symbol Window",
  "description": "Source Insight-like symbol navigation and workspace search.",
  "version": "0.0.2",
  "publisher": "ytlee",
  "license": "MIT",
  "author": {
    "name": "ytlee",
    "url": "https://github.com/Lee20171010"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Lee20171010/symbol-window"
  },
  "bugs": {
    "url": "https://github.com/Lee20171010/symbol-window/issues"
  },
  "homepage": "https://github.com/Lee20171010/symbol-window#readme",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Programming Languages",
    "Visualization"
  ],
  "keywords": [
    "symbol",
    "outline",
    "navigation",
    "source insight",
    "structure",
    "workspace",
    "search",
    "tree",
    "code map"
  ],
  "main": "./dist/extension.js",
  "icon": "media/icon.png",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "symbol-window-container",
          "title": "Symbol Window",
          "icon": "$(symbol-structure)"
        }
      ]
    },
    "views": {
      "symbol-window-container": [
        {
          "type": "webview",
          "id": "symbol-window-view",
          "name": "Symbol Window"
        }
      ]
    },
    "commands": [
      {
        "command": "symbol-window.focus",
        "title": "Focus Symbol Window"
      },
      {
        "command": "symbol-window.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "symbol-window.toggleMode",
        "title": "Toggle Mode (Current/Project)",
        "icon": "$(arrow-swap)"
      },
      {
        "command": "symbol-window.deepSearch",
        "title": "Deep Search",
        "icon": "$(search-fuzzy)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "symbol-window.toggleMode",
          "when": "view == symbol-window-view",
          "group": "navigation"
        },
        {
          "command": "symbol-window.refresh",
          "when": "view == symbol-window-view",
          "group": "navigation"
        },
        {
          "command": "symbol-window.deepSearch",
          "when": "view == symbol-window-view",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Symbol Window",
      "properties": {
        "symbolWindow.cleanCStyleTypes": {
          "type": "boolean",
          "default": true,
          "description": "Automatically move C/C++ style type suffixes (e.g., (struct), (typedef)) from the symbol name to the detail view."
        },
        "symbolWindow.moveSignatureToDetail": {
          "type": "boolean",
          "default": true,
          "description": "Move function signatures/parameters (e.g., (int a, char b)) from the symbol name to the detail view for a cleaner list."
        },
        "symbolWindow.enableDeepSearch": {
          "type": "boolean",
          "default": false,
          "description": "(Experimental) Enable the Deep Search feature, which uses text scanning (Ripgrep) to find symbols when LSP results are truncated."
        },
        "symbolWindow.forceDeepSearch": {
          "type": "boolean",
          "default": false,
          "description": "(Experimental) Always perform a Deep Search when searching in Project Mode. Requires 'symbolWindow.enableDeepSearch' to be true."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.43",
    "@vscode/ripgrep": "^1.17.0",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
